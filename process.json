{
  "name": "lune-bot",
  "script": "index.js",
  "watch": [
    "handler",
    "index.js",
    "lib",
    "settings"
  ],
  "ignore_watch": ["_IGNORE_session", "fonts", "Manual.txt", "node_modules", "lib/*.json", "data/*.json", "lib/data", "media", "json.sqlite", "package.json", "package-lock.json", "session.data.json", "logs"],
  "exec_mode": "cluster",
  "args": [
    "--color"
  ],
  "log_file": "./logs/pm2.log",
  "watch_options": {
    "followSymlinks": false
  }
}
